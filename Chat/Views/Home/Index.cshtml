@section scripts
{
    <script src="~/Scripts/SignalR.js"></script>
}

<div id="messages">

</div>
<div class="row" id="controls">
    <div class="col-lg-8 col-md-8 col-sm-8">
        <input type="text" id="message-text" class="btn btn-primary col-lg-12 col-md-12 col-sm-12" />
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <button type="button" id="send-message" class="btn btn-primary col-lg-12 col-md-12 col-sm-12">enviar Mensagem</button>
    </div>
</div>

<script type="text/html" id="MessageTemplate">
    <div class="row">
        <div class="col-lg-12">
            <strong>{User.Name}:</strong>
            <span class="pull-right date-span">{CreateDate}</span>
            <p>{Text}</p>
        </div>
    </div>
</script>