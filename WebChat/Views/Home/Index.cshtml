@section scripts{

    <script src="@Url.Content("~/signalr/hubs")"></script>
    <script src="@Url.Content("~/Scripts/SignalR.js")" type="text/javascript"></script>
}

<div>
    <div id="messages">

    </div>

    <div id="logado">

    </div>

    <br>
    <br>
    <div class="row" id="controls">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <input type="text" id="message-text" class="col-lg-12 col-md-12 col-sm-12" />
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <button type="button" id="send-message" class="btn btn-primary col-lg-12 col-md-12 col-sm-12">Enviar Mensagem</button>
        </div>
    </div>
</div>

<script type="text/html" id="MessageTemplate">
    <div class="row">
        <div class="col-lg-12">
            <strong>{User.Nome}:</strong>
            <span class="pull-right date-span">{CreateDate}</span>
            <p>{Texto}</p>
        </div>
    </div>
</script>

<script type="text/html" id="NomeLogado">
    <div class="row">
        <strong>OnLine</strong>
        <div class="col-lg-12">
            <strong>{User.Nome}</strong>
        </div>
    </div>
</script>